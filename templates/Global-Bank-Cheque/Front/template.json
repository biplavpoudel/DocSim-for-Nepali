{
    "doc_name": "cheque_template",
    "background_img": "templates/Global-Bank-Cheque/Front/blank_cheque_og.png",
    "defaults": {
        "split_words": false,
        "lang": "en",
        "font_files": {
            "en": "fonts/PhontPhreaks Handwriting.ttf",
            "ne": "fonts/Karma-Regular.ttf"
        },
        "font_size": 25,
        "font_color": "rgb(15,15,15)",
        "upper_case": true
    },
    "components": {
        "date": {
            "type": "text",
            "filler_mode": "regex",
            "font_size":43,
            "lang": "ne",
            "font":"fonts/Karma-Regular.ttf",
            "filler_regex":  "^((०  [१-९])|([१-२]  [०-९])|(३  [०-१])) (०  [१-९]|१  [०-२]) (२  ०  [७-८] [०-९])$\n",
            "entity": "date",
            "location": {
                "x_left": 900,
                "y_top": 38
            }
        },
        "payee_name": {
            "type": "text",
            "filler_mode": "random",
            "filler_type": "full_name",
            "lang": "ne",
            "font_size": 25,
            "entity": "name",
            "location": {
                "x_left": 292,
                "y_top": 128
            }
        },
        "amount_words": {
            "type": "text",
            "filler_mode": "random",
            "filler_type": "full_name",
            "entity": "amount_words",
            "lang": "ne",
            "font":"fonts/Karma-Regular.ttf",
            "font_size": 25,
            "location": {
                "x_left": 194,
                "y_top": 165
            }
        },
        "amount_figures": {
            "type": "text",
            "filler_mode": "regex",
            "filler_type": "full_name",
            "font_size": 25,
            "lang": "ne",
            "font":"fonts/Karma-Regular.ttf",
            "filler_regex": "^[०-९]{1,3}(,[०-९]{1,2})?(\\.[०-९]{1,2})?$\n",
            "entity": "amount_figures",
            "location": {
                "x_left": 924,
                "y_top": 181
            }
        }
    }
}