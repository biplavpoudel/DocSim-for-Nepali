{
    "doc_name": "cheque_template",
    "background_img": "templates/Global-Bank-Cheque/Front/background.jpg",
    "defaults": {
        "split_words": true,
        "lang": "en",
        "font_files": {
            "en": "fonts/Arial_Bold.ttf",
            "hi": "fonts/Karma-Regular.ttf"
        },
        "font_size": 10,
        "font_color": "rgb(15,15,15)",
        "upper_case": true
    },
    "components": {
        "date": {
            "type": "text",
            "filler_mode": "regex",
            "font_size":27,
            "filler_regex":  "(0 [1-9]| [1 2] [0-9]|3 [01]) (0 [1-9]|1 [0-2])(2 0 [0-7] [0-9]| 2 0 8 0)",
            "entity": "date",
            "location": {
                "x_left": 500,
                "y_top": 35
            }
        },
        "payee_name": {
            "type": "text",
            "filler_mode": "random",
            "filler_type": "full_name",
            "lang": "hi",
            "font_size": 23,
            "entity": "name",
            "location": {
                "x_left": 139,
                "y_top": 82
            }
        },
        "amount_words": {
            "type": "text",
            "filler_mode": "random",
            "filler_type": "full_name",
            "entity": "amount_words",
            "font":"fonts/Karma-Regular.ttf",
            "location": {
                "x_left": 229,
                "y_top": 120
            }
        },
        "amount_figures": {
            "type": "text",
            "filler_mode": "regex",
            "filler_type": "full_name",
            "font_size": 15,
            "filler_regex": "^\\d{1,3}(,\\d{1,2})?(\\.\\d{1,2})?$",
            "entity": "amount_figures",
            "location": {
                "x_left": 515,
                "y_top": 120
            }
        }
    }
}